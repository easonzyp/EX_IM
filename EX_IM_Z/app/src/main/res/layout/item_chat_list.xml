<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_ios">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_between_size_70"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/rl_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_between_size_15">
            <ImageView
                android:id="@+id/iv_user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/default_user"
                />
            <TextView
                android:id="@+id/tv_message_count"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/message_count"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_size_10"
                android:gravity="center"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rl_user_image"
            android:layout_marginLeft="@dimen/space_between_size_15"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好友名称"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/n_title"/>
            <TextView
                android:id="@+id/tv_msg_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginTop="@dimen/space_between_size_10"
                android:text="hello word"
                android:textColor="@color/n_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="时间"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_between_size_15"
            android:textColor="@color/n_content"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/n_gray"/>
</LinearLayout>